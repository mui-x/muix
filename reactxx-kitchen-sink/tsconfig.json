{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "rootDir": "src",
    "outDir": "deploy/lib",
    "jsx": "react",

    //"inlineSourceMap": true,
    //"inlineSources": true,
    "sourceMap": false,
    "noEmitHelpers": true,
    //"importHelpers": true,

    "strictNullChecks": false,
    "downlevelIteration": true,
    "strict": true,
    "strictFunctionTypes": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,

    "baseUrl": ".",

    "lib": [
      "dom",
      //"es2015",
      "es5",
      "es6",
      "esnext.asynciterable"
    ]

  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}

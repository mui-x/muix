{
  "compileOnSave": true,

  "compilerOptions": {

    "module": "amd",
    "outDir": "deploy/lib",
    "moduleResolution": "node",
    "target": "es5",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "rootDir": "src",
    "jsx": "react",

    "inlineSourceMap": true,
    "inlineSources": true,
    "importHelpers": false,

    "strictNullChecks": false,
    "downlevelIteration": true,
    "strict": true,
    "strictFunctionTypes": false,
    "noImplicitAny": false,

    "baseUrl": ".",

    "lib": [
      "dom",
      "es5",
      "es6",
      "esnext.asynciterable"
    ]

  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}

{
  "compileOnSave": true,

  "compilerOptions": {
    "target": "es2017",
    "rootDir": "src",
    "outDir": "deploy/es",

    "baseUrl": ".",
    "paths": {
      "typescript-config": [ "node_modules/reactxx/es/typings/typescript-config" ],
      "reactxx-mdi": [ "node_modules/reactxx-mdi/es/index" ]
    },

    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": false,

    "experimentalDecorators": true,
    "noImplicitAny": false,
    "jsx": "react-native",
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}

{
  "compilerOptions": {

    "module": "umd",
    "outDir": "deploy/lib",
    "moduleResolution": "node",
    "target": "es5",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "rootDir": "src",
    "jsx": "react",
    "allowJs": true,

    "sourceMap": false,
    "noEmitHelpers": true,

    "strictNullChecks": false,
    "downlevelIteration": true,
    "strict": true,
    "strictFunctionTypes": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,

    "baseUrl": ".",

    "lib": [
      "dom",
      "es5",
      "es6",
      "esnext.asynciterable"
    ]

  }
}

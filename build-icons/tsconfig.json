{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "system",
    "inlineSourceMap": true,
    "inlineSources": true,

    "baseUrl": ".",
    "paths": {
      "reactxx-mdi": [ "deploy" ]
    },

    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": false,
    "noImplicitReturns": true,
    "strictFunctionTypes": false,

    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ]
  },
  "exclude": [
    "deploy/es",
    "design",
    "node_modules",
    "jspm_packages"
  ]
}
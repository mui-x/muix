{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "rootDir": "src",
    "outDir": "deploy/es",

    //"declaration": true,

    "baseUrl": ".",
    "paths": {
      "typescript-config": [ "src/reactxx/native/index" ],

      "reactxx-fela": [ "src/fela/index" ],

      "reactxx-mdi": [ "node_modules/reactxx-mdi/es/index" ],

      "reactxx-animation": [ "src/animation/native/index" ],
      "reactxx-mediaq": [ "src/mediaq/native/index" ],
      "reactxx-basic2": [ "src/basic2/index" ],

      "reactxx-basic": [ "src/basic/native/index" ],

      "reactxx-mui/typings/*": [ "src/mui/typings/*" ],

      "reactxx": [ "src/reactxx/native/index" ],

      "reactxx-stateman": [ "src/stateman/index" ],

      "reactxx-mui/*": [ "src/mui/native/*" ]
    },

    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": false,

    "experimentalDecorators": true,
    "noImplicitAny": false,
    "jsx": "react-native",
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/ks/typings.d.ts"
  ]
}

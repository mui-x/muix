{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "rootDir": "packages",
    "outDir": "deploy/es",

    //"declaration": true,

    "baseUrl": ".",
    "paths": {
      "reactxx-mdi/*": [ "node_modules/reactxx-mdi/es/index" ],
      "reactxx": [ "packages/reactxx/native/index" ],
      "reactxx-stateman": [ "packages/stateman/index" ],

      "reactxx-mui/*": [ "packages/mui/native/*" ],

      "muix-styles/web": [ "packages/styles/web/index" ],
      "muix-styles/native": [ "packages/styles/native/index" ],
      "muix-styles": [ "packages/styles/native/index" ],

      "muix-primitives": [ "packages/primitives/native/index" ],


      "muix-components/*": [ "packages/components/native/*" ],
      //"muix-components/current/*": [ "packages/components/web/*" ],
      //"muix-components/common/*": [ "packages/components/common/*" ],
      //"muix-components/native/*": [ "packages/components/native/*" ],

      "test/*": [ "packages/test/*" ]
    },

    "importHelpers": true, //https://github.com/facebook/react-native/issues/16858
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": false,

    "experimentalDecorators": true,
    "noImplicitAny": false,
    "jsx": "react-native",
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "packages/**/*",
    "node_modules/reactxx-mdi/es/typings.d.ts",
    "node_modules/fela/index.d.ts"
  ]
}

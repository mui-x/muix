{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",

    //"declaration": true,

    //"traceResolution": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "rootDir": "src",
    "outDir": "deploy/lib",
    "jsx": "react",

    "inlineSourceMap": true,
    "inlineSources": true,
    "importHelpers": true,

    "strictNullChecks": false,
    "downlevelIteration": true,
    "strict": true,
    "strictFunctionTypes": false,
    "noImplicitAny": false,
    //"noUnusedLocals": true,

    "baseUrl": ".",
    "paths": {
      "typescript-config": [ "src/reactxx/web/index" ],

      "reactxx-fela": [ "src/fela/index" ],

      "reactxx-animation": [ "src/animation/web/index" ],
      "reactxx-mediaq": [ "src/mediaq/web/index" ],
      "reactxx-basic2": [ "src/basic2/index" ],

      "reactxx-basic": [ "src/basic/web/index" ],

      "reactxx-mui/typings/*": [ "src/mui/typings/*" ],

      "reactxx": [ "src/reactxx/native/index" ],

      "reactxx-stateman": [ "src/stateman/index" ],

      "reactxx-mui/*": [ "src/mui/*" ]
    },

    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/**/*",
    "node_modules/reactxx-mdi/typings.ts"
  ],
  "exclude": [
    "src/ks/typings.d.ts"
  ]
}
{
  "compileOnSave": true,
  "compilerOptions": {
    "watch": true,
    "target": "es5",
    "module": "system",
    "moduleResolution": "node",

    "allowJs": true,
    //"declaration": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "rootDir": "src",
    "outDir": "deploy/lib",
    "jsx": "react",

    "inlineSourceMap": true,
    "inlineSources": true,
    "importHelpers": true,

    "strictNullChecks": false,
    "downlevelIteration": true,
    "strict": true,
    "strictFunctionTypes": false,
    "noImplicitAny": false,
    //"noUnusedLocals": true,

    "baseUrl": ".",
    "paths": {

      "reactxx-sheeter": [ "src/sheeter/index" ],
      "reactxx-fela": [ "src/fela/index" ],
      "reactxx-animation": [ "src/animation/web/index" ],
      "reactxx-primitives": [ "src/primitives/web/index" ],
      "reactxx-mediaq": [ "src/mediaq/web/index" ],
      "reactxx-basic": [ "src/basic/index" ],
      "reactxx-activable": [ "src/activable/web/index" ],
      "reactxx": [ "src/reactxx/web/index" ],

      "reactxx-mui-web/*": [ "src/mui-web/*" ],
      "reactxx-muix/*": [ "src/muix/*" ],
      "classnames": [ "src/muix/web/classnames" ]
    },

    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ]
  },
  "include": [
    //"src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/material-ui/*.js",
    "node_modules/reactxx-mdi/typings.ts"
  ],
  "exclude": [
    "src/ks/typings.d.ts"
  ]
}
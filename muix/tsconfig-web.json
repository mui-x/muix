{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "system",
    "inlineSourceMap": true,
    "inlineSources": true,
    "importHelpers": true,
    "rootDir": "packages",
    "outDir": "deploy/lib",

    "baseUrl": ".",
    "paths": {
      "reactxx-mdi/*": [ "node_modules/reactxx-mdi/index" ],
      "reactxx-mui/*": [ "packages/mui/web/*" ],
      "reactxx-appstate": [ "packages/appstate/index" ],

      "reactxx": [ "packages/reactxx/web/index" ],
      "reactxx/web": [ "packages/reactxx/web/index" ],

      "muix-styles/web": [ "packages/styles/web/index" ],
      "muix-styles/native": [ "packages/styles/native/index" ],
      "muix-styles": [ "packages/styles/native/index" ],

      "muix-primitives": [ "packages/primitives/web/index" ],

      "muix-components/*": [ "packages/components/web/*" ],
      "test/*": [ "packages/test/*" ]
    },

    //"esModuleInterop": true,

    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": false,

    "experimentalDecorators": true,
    "noImplicitAny": false,
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "packages/**/*",
    "node_modules/reactxx-mdi/typings.d.ts",
    "node_modules/fela/index.d.ts"
    //"node_modules/@types/reactxx/**/*"
    //"node_modules/popper.js/index.d.ts",
    //"node_modules/react-popper/react-popper.d.ts"
    //"node_modules/material-ui/**/*"
  ]
}
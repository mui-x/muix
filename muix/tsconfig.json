{
  "compileOnSave": true,
  "compilerOptions": {
    //"watch": true,
    "target": "es5",
    "module": "system",
    "moduleResolution": "node",
    "allowJs": false,
    //"declaration": true,
    //"outFile": "all.js",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "outDir": "deploy/lib",
    "jsx": "react",
    "inlineSourceMap": true,
    //"sourceMap": false,
    //"inlineSources": true,
    "importHelpers": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "strict": false,
    "strictFunctionTypes": false,
    "noImplicitAny": false,
    "removeComments": true,
    //"noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "reactxx-typings": [
        "src/typings/index"
      ],
      "reactxx-fela": [
        "src/fela/index"
      ],
      "reactxx-core/*": [
        "src/core/*"
      ],
      "reactxx-core": [
        "src/core"
      ],
      "reactxx-primitives/*": [
        "src/primitives/*"
      ],
      "reactxx-primitives": [
        "src/primitives/index"
      ],

      // "reactxx-sheeter": [
      //   "src/sheeter/index"
      // ],
      // "reactxx-animation": [
      //   "src/animation/index"
      // ],
      // "reactxx-basic": [
      //   "src/basic/index"
      // ],
      // "reactxx-mediaq": [
      //   "src/mediaq/index"
      // ],
      // "reactxx-icons/*": [
      //   "src/icons/*"
      // ],
      // "reactxx-mui-web/*": [
      //   "src/mui-web/*"
      // ],
      // "reactxx-muix/*": [
      //   "src/muix/*"
      // ]
    },
    "lib": [
      "dom",
      "es2017",
      "esnext.asynciterable"
    ]
  },
  "include": [
    //"src/**/*",
    "src/typings.d.ts",
    "src/ks/common/ks.d.ts",

    "src/typings",
    "src/core",
    "src/fela",
    "src/primitives",
    "src/ks/web",
    
    // "src/sheeter",
    // "src/basic",
    // "src/mui-web",
    // "src/primitives",
    // "src/media",
    // "src/animation",
    // "src/icons",
    // "src/muix",
    // "src/ks/common/muix-doc",
    // "src/ks/common/mui-doc-app",
    // "src/ks/common/primitives", 
    // "src/ks/common/mediaq", 
    // "src/ks/common/animation", 

    //"src/ks/common/components", 
  ],
  "exclude": [
    "src/*/typings.d.ts",
    "src/trash",
    "src/ks/common/muix",
    "src/ks/native",
    "src/icons/native",
    "src/test",
    //"src/muix/reactxx-mui-web"
    "src/muix/reactxx-mui-web"
  ]
}
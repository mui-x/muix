{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "rootDir": "src",
    "outDir": "deploy/es",

    //"declaration": true,

    "baseUrl": ".",
    "paths": {
      "reactxx-fela": [ "src/fela/index" ],

      "reactxx-mdi": [ "node_modules/reactxx-mdi/es/index" ],

      "reactxx-basic/*": [ "src/basic/web/*" ],

      "reactxx-mui/typings/*": [ "src/mui/typings/*" ],

      "reactxx": [ "src/reactxx/native/index" ],
      "reactxx/web": [ "src/reactxx/web/index" ],
      "reactxx-stateman": [ "src/stateman/index" ],
      "reactxx-mui/*": [ "src/mui/native/*" ],

      "typescript-config": [ "src/reactxx/native/index" ]
    },

    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": false,

    "experimentalDecorators": true,
    "noImplicitAny": false,
    "jsx": "react-native",
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/ks/typings.d.ts"
  ]
}

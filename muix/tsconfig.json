{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "rootDir": "src",
    "outDir": "deploy/es",

    //"declaration": true,

    "baseUrl": ".",
    "paths": {
      "reactxx-mdi/*": [ "node_modules/reactxx-mdi/es/index" ],
      "reactxx": [ "src/reactxx/native/index" ],
      "reactxx/web": [ "src/reactxx/web/index" ],
      "reactxx-stateman": [ "src/stateman/index" ],
      "reactxx-mui/*": [ "src/mui/native/*" ]
    },

    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": false,

     "experimentalDecorators": true,
    "noImplicitAny": false,
    "jsx": "react-native",
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/**/*",
    "node_modules/reactxx-mdi/es/typings.d.ts"
  ],
  "exclude": [
    "src/ks/typings/mdi/web.d.ts" 
  ]
}

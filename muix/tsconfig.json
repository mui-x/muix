{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",

    //"declaration": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "rootDir": "src",
    "outDir": "deploy/lib",
    "jsx": "react",

    "inlineSourceMap": true,
    "inlineSources": true,
    "importHelpers": true,

    "strictNullChecks": false,
    "downlevelIteration": true,
    "strict": true,
    "strictFunctionTypes": false,
    "noImplicitAny": false,
    //"noUnusedLocals": true,

    "baseUrl": ".",
    "paths": {
      "reactxx-typings": [ "src/typings/index" ],
      "reactxx-typings/mdi": [ "src/typings/mdi-web" ],

      "reactxx-mdi/*": [ "node_modules/reactxx-mdi/index" ],

      "reactxx-mui/*": [ "src/mui/web/*" ],
      "reactxx-mui/typings/*": [ "src/mui/typings/*" ],

      "reactxx-stateman": [ "src/stateman/index" ],

      "reactxx": [ "src/reactxx/web/index" ],
      "reactxx/web": [ "src/reactxx/web/index" ]
    },

    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/ks/typings.d.ts"
  ]
}
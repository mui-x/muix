{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "umd",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "rootDir": "src",
    "outDir": "deploy/lib",
    "jsx": "react",

    "inlineSourceMap": true,
    "inlineSources": true,
    "importHelpers": true,

    "strictNullChecks": false,
    "downlevelIteration": true,
    "strict": true,
    "strictFunctionTypes": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,

    "baseUrl": ".",
    "paths": {
      "reactxx-mdi/*": [ "node_modules/reactxx-mdi/index" ],
      "reactxx-mui/*": [ "src/mui/web/*" ],
      "reactxx-stateman": [ "src/stateman/index" ],

      "reactxx": [ "src/reactxx/web/index" ],
      "reactxx/web": [ "src/reactxx/web/index" ]
    },

    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/**/*",
    "node_modules/reactxx-mdi/typings.d.ts",
    "node_modules/fela/index.d.ts"
    //"node_modules/@types/reactxx/**/*"
    //"node_modules/popper.js/index.d.ts",
    //"node_modules/react-popper/react-popper.d.ts"
    //"node_modules/material-ui/**/*"
  ]
}
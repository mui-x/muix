{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "rootDir": "src",
    "outDir": "deploy/es",

    //"declaration": true,

    "baseUrl": ".",
    "paths": {
      "muix-icons/*": [ "node_modules/muix-icons/es/index" ],

      "muix-styles/web": [ "src/styles/web/index" ],
      "muix-styles/native": [ "src/styles/native/index" ],
      "muix-styles": [ "src/styles/native/index" ],

      "muix-animation": [ "src/animation/native/index" ],

      "muix-primitives": [ "src/primitives/native/index" ],
      "muix-prim5s": [ "src/prim5s/native/index" ],

      "muix-components/*": [ "src/components/native/*" ],
      //"muix-components/current/*": [ "src/components/web/*" ],
      //"muix-components/common/*": [ "src/components/common/*" ],
      //"muix-components/native/*": [ "src/components/native/*" ],

      "test/*": [ "src/test/*" ]
    },

    "importHelpers": true, //https://github.com/facebook/react-native/issues/16858
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": false,

    "experimentalDecorators": true,
    "noImplicitAny": false,
    "jsx": "react-native",
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/**/*",
    "node_modules/muix-icons/es/typings.d.ts",
    "node_modules/fela/index.d.ts"
  ]
}

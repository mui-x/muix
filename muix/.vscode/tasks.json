    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [ 
                "$tsc-watch"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "TypeScript compile",
            "type": "shell",
            "command": "tsc -b src/ks --verbose --watch",
            //"command": "tsc -p src/ks",
            "problemMatcher": [
                "$tsc-watch"
            ],
        },
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc-watch"
            ],
        }
    ]
}
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "TypeScript compile",
            "type": "shell",
            "command": "tsc -b src/icons --verbose",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "typescript",
            "tsconfig": "src\\icons\\tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ]
        }
    ]
}
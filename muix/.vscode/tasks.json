{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "runCurrentTest",
            "type": "shell",
            "command": ".\\node_modules\\.bin\\jest.cmd",
            "args": [
                "--runInBand",
                //"--testPathPattern=fela",
                //"--testPathPattern=applyLastWinStrategy",
                //"--testPathPattern=atomize-sheet",
                //"--testPathPattern=to-classname",
                //"--testPathPattern=switch-sheet",
                //"--testPathPattern=with-styles-comp",
                "-u"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            }
        },
        {
            "type": "typescript",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "TypeScript compile",
            "type": "shell",
            "command": "tsc -b src/ks --verbose --watch",
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc-watch"
            ]
        }
    ]
}
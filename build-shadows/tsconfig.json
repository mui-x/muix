{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "system",
    "rootDir": "packages",
    "outDir": "deploy",

    "moduleResolution": "node",

    "inlineSourceMap": true,
    "inlineSources": true,

    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ]
  },
  "exclude": [
    "node_modules",
    "jspm_packages"
  ]
}
{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "rootDir": "src",
    "outDir": "deploy/es",

    "baseUrl": ".",
    "paths": {
      "muix": [ "node_modules/muix/es/root" ],
      "muix-icons/*": [ "node_modules/muix-icons/es/index" ]
    },

    "importHelpers": true, //https://github.com/facebook/react-native/issues/16858
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": false,
    "noImplicitAny": false,
    "jsx": "react-native",
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/**/*",
    "node_modules/muix-icons/es/typings.d.ts",
    "node_modules/muix-styles/typings/**/*",
    "node_modules/muix-components/typings/**/*",
    "node_modules/muix-primitives/typings/**/*"
  ],
  "exclude": [
    "jspm_packages",
    "deploy",
    "trash"
  ]
}

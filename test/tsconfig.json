{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "system",
    "inlineSourceMap": true,
    "inlineSources": true,
    "importHelpers": true,
    "rootDir": "src",
    "outDir": "deploy/lib",

    "baseUrl": ".",
    "paths": {
      "muix": [ "node_modules/muix/es/common/root" ],
      "muix-components/*": [ "node_modules/muix-components/es/native/*" ]
    },

    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": false,

    "noImplicitAny": false,
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/**/*",
    "node_modules/muix-icons/typings.d.ts",
    "node_modules/muix-styles/typings/**/*",
    "node_modules/muix-components/typings/**/*",
    "node_modules/muix-primitives/typings/**/*"
  ]
}
{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "rootDir": ".",
    "outDir": "deploy/es",

    "baseUrl": ".",
    "paths": {
      "muix": [ "node_modules/muix/es/root" ]
    },

    "importHelpers": true, //https://github.com/facebook/react-native/issues/16858
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": false,
    "noImplicitAny": false,
    "jsx": "react-native",
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ]
  },
  "exclude": [
    "jspm_packages",
    "node_modules",
    "deploy"
  ]
}

{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "rootDir": "src",
    "outDir": "deploy/es",

    "baseUrl": ".",
    "paths": {
      "reactxx-mdi/*": [ "node_modules/reactxx-mdi/index" ]
    },

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "importHelpers": true, //https://github.com/facebook/react-native/issues/16858
    "strictNullChecks": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": false,
    "noImplicitAny": false,
    "jsx": "react-native",
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/**/*",
    "node_modules/reactxx-mdi/typings.d.ts",
    "node_modules/reactxx/typings/**/*"
  ],
  "exclude": [
    "jspm_packages",
    "deploy",
    "trash"
  ]
}
